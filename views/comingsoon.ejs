<% include partials/header %>

<div class="container">
    <h2 class="mt-5 text-white">Quotes with GIF</h2>
    <div class="list-group mt-3">
        <a class="list-group-item list-group-item-action" style="background: #141414!important;" data-rel="popover" data-placement="bottom" data-content="<img src='/werehomechewie.webp'>">
            <div class="d-flex flex-row w-100 align-items-center">
                <img class="mr-3" src="episodes/episode7.jpg" style="height: 40px; width: 40px; border-radius: 50%" title="Star Wars: Episode IV - A New Hope (1977)">
                <div class="d-flex flex-column">
                    <h6 class="mb-0 text-white">We're are home, Chewie</h6>
                    <p class="mb-0 text-muted">Han Solo</p>  
                </div>
                <small class="ml-auto text-muted">Star Wars: Episode VII - The Force Awakens (2015)</small>
            </div>     
        </a>
    </div>
    <h1 class="text-center mt-5">OR</h1>
    <h2 class="mt-5 text-white">Quotes with sound</h2>
    <div class="list-group mt-3">
        <a class="list-group-item list-group-item-action item2" style="background: #141414!important;">
            <div class="d-flex flex-row w-100 align-items-center">
                <img class="mr-3" src="episodes/episode7.jpg" style="height: 40px; width: 40px; border-radius: 50%" title="Star Wars: Episode IV - A New Hope (1977)">
                <div class="d-flex flex-column">
                    <h6 class="mb-0 text-white">We're are home, Chewie</h6>
                    <p class="mb-0 text-muted">Han Solo</p>  
                </div>
                <small class="ml-auto text-muted">Star Wars: Episode VII - The Force Awakens (2015)</small>
                <audio class="audio" src="werehomechewie.mp3"></audio>
            </div>     
        </a>
        <p class="text-center text-muted font-italic mt-3">Hover to see GIF and Click to play audio</p>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('[data-rel=popover]').popover({
            html: true,
            trigger: "hover"
        });
    })
    $('.item2').on('click', function() {     
        $('.audio').get(0).play();    
        return false;    
    });   
</script>

